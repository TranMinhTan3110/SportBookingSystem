@{
    ViewData["Title"] = "Quản lý Người Dùng";
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}
@section Styles{
    <link rel="stylesheet" href="~/css/UserAD.css" />

}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">

<div class="users-container">
    <div class="page-header">
        <div class="page-header-icon">
            <i class="fas fa-users"></i>
        </div>
        <div class="page-header-content">
            <h1>Quản lý Người Dùng</h1>
            <p>Quản lý thông tin và trạng thái người dùng trong hệ thống</p>
        </div>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="stat-icon total"><i class="fas fa-users"></i></div>
            <div class="stat-content">
                <h3 id="totalUsers">5</h3><p>Tổng Người Dùng</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon active"><i class="fas fa-check-circle"></i></div>
            <div class="stat-content">
                <h3 id="activeUsers">4</h3><p>Đang Hoạt Động</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon blocked"><i class="fas fa-ban"></i></div>
            <div class="stat-content">
                <h3 id="blockedUsers">1</h3><p>Bị Khóa</p>
            </div>
        </div>
        <div class="stat-card">
            <div class="stat-icon new"><i class="fas fa-star"></i></div>
            <div class="stat-content">
                <h3 id="newUsers">1</h3><p>Mới Tháng Này</p>
            </div>
        </div>
    </div>

    <div class="filter-section">
        <div class="search-box">
            <i class="fas fa-search"></i>
            <input type="text" id="searchInput" placeholder="Tìm kiếm theo tên, email, số điện thoại...">
        </div>
        <div class="filter-group">
            <button class="filter-btn active" data-filter="all">
                <i class="fas fa-list"></i> Tất cả
            </button>
            <button class="filter-btn" data-filter="active">
                <i class="fas fa-check-circle"></i> Hoạt động
            </button>
            <button class="filter-btn" data-filter="blocked">
                <i class="fas fa-ban"></i> Bị khóa
            </button>
        </div>
    </div>

    <div class="table-container">
        <div class="table-wrapper">
            <table>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Người Dùng</th>
                        <th>Số Điện Thoại</th>
                        <th>Email</th>
                        <th>Phân Quyền</th>
                        <th>Ngày Tham Gia</th>
                        <th>Trạng Thái</th>
                        <th>Thao Tác</th>
                    </tr>
                </thead>
                <tbody id="userTableBody">
                </tbody>
            </table>
            <div id="noResults" class="no-results">
                <i class="fas fa-search"></i>
                <p>Không tìm thấy kết quả phù hợp</p>
            </div>
        </div>
    </div>
</div>

<div class="user-ad-modal" id="userModal">
    <div class="user-ad-modal-content">
        <div class="user-ad-modal-header">
            <h2><i class="fas fa-user-circle"></i> Chi Tiết Người Dùng</h2>
            <button class="close-modal" onclick="closeModal()">
                <i class="fas fa-times"></i>
            </button>
        </div>
        <div class="user-ad-modal-body" id="modalBody"></div>
        <div class="user-ad-modal-footer" id="modalFooter"></div>
    </div>
</div>

@section Scripts{
    <script src="~/js/UserAD.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}