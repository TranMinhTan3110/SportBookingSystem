@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Truy cập bị từ chối - Sports Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/asset/css/Login.css">
</head>
<body>
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4 text-center">

                    <div class="glass-card p-5">
                        <div class="card-body">
                            <div class="mb-4">
                                <div class="forgot-password-icon" style="background: rgba(255, 68, 68, 0.2); border-color: #ff4444;">
                                    <i class="bi bi-shield-lock-fill" style="color: #ff4444; font-size: 3rem;"></i>
                                </div>
                            </div>

                            <h2 class="form-title mb-3">DỪNG LẠI!</h2>
                            <p class="text-white mb-4" style="font-size: 1.1rem; opacity: 0.9;">
                                Bạn không có quyền truy cập vào khu vực dành riêng cho Quản trị viên.
                                Vui lòng quay lại trang dành cho khách hàng.
                            </p>

                            <div class="d-grid gap-2">
                                <a href="/Login/Signout" class="btn btn-primary-custom py-2">
                                    <i class="bi bi-house-door me-2"></i> Quay về trang đăng nhập
                                </a>
                                <a href="/Login/SignOut" class="link-secondary text-white mt-3" style="text-decoration: none;">
                                    <i class="bi bi-box-arrow-right me-1"></i> Đăng xuất tài khoản này
                                </a>
                            </div>
                        </div>
                    </div>

                    <p class="mt-4 text-white-50 small">
                        &copy; 2026 Sports Booking System. Protected Area.
                    </p>
                </div>
            </div>
        </div>
    </div>
</body>
</html>