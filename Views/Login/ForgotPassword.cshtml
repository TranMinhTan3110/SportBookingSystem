@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password - Sports Booking System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/asset/css/Login.css">
</head>

<body>
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">
                    <!-- Logo / Brand -->
                    <div class="text-center mb-4">
                        <div class="brand-logo">
                            <i class="bi bi-trophy-fill"></i>
                        </div>
                        <h2 class="brand-title">SPORTS BOOKING</h2>
                        <p class="brand-subtitle">Online Sports Booking & Payment System</p>
                    </div>

                    <!-- Forgot Password Form Card -->
                    <div class="glass-card">
                        <div class="card-body p-4 p-sm-5">
                            <!-- Icon -->
                            <div class="text-center mb-3">
                                <div class="forgot-password-icon">
                                    <i class="bi bi-key"></i>
                                </div>
                            </div>

                            <h3 class="form-title text-center mb-2">Quên mật khẩu?</h3>
                            <p class="text-center text-white mb-4">
                                Nhập email của bạn để nhận liên kết đặt lại mật khẩu
                            </p>

                            <form>
                                <!-- Email -->
                                <div class="mb-4">
                                    <div class="input-group">
                                        <span class="input-icon">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <input type="email" class="form-control glass-input" id="email"
                                               placeholder="Nhập địa chỉ email của bạn" required>
                                    </div>
                                </div>

                                <!-- Send Reset Link Button -->
                                <button type="submit" class="btn btn-primary-custom w-100 mb-3">
                                    <i class="bi bi-send me-2"></i>
                                    Gửi liên kết đặt lại
                                </button>

                                <!-- Back to Login Link -->
                                <div class="text-center">
                                    <a asp-controller="Login" asp-action="SignIn" class="link-secondary">
                                        <i class="bi bi-arrow-left me-1"></i>
                                        Quay lại đăng nhập
                                    </a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Info Alert -->
                    <div class="alert alert-info-custom mt-4" role="alert">
                        <i class="bi bi-info-circle me-2"></i>
                        <span>
                            Kiểm tra hộp thư đến của bạn sau khi gửi yêu cầu. Liên kết có hiệu lực trong 24
                            giờ.
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>