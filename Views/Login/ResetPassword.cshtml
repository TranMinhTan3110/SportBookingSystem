@{
    Layout = null;
    var email = Context.Request.Query["email"];
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đặt lại mật khẩu - Sports Booking</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/asset/css/Login.css">
</head>
<body>
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100">
                <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">
                    <div class="glass-card">
                        <div class="card-body p-4 p-sm-5">
                            <h3 class="form-title text-center mb-4">Mật khẩu mới</h3>
                            <p class="brand-subtitle text-center mb-4">Nhập mã OTP gửi tới: <b>@email</b></p>

                            <form id="reset_password_form">
                                <input type="hidden" id="resetEmail" value="@email" />

                                <div class="mb-3">
                                    <label class="form-label">Mã xác thực (OTP)</label>
                                    <div class="input-group">
                                        <span class="input-icon"><i class="bi bi-shield-lock"></i></span>
                                        <input type="text" class="form-control glass-input" id="otpCode" placeholder="6 chữ số" required>
                                    </div>
                                </div>

                                <div class="mb-4">
                                    <label class="form-label">Mật khẩu mới</label>
                                    <div class="input-group">
                                        <span class="input-icon"><i class="bi bi-lock"></i></span>
                                        <input type="password" class="form-control glass-input" id="newPassword" placeholder="Nhập mật khẩu mới" required>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary-custom w-100 mb-3">Xác nhận thay đổi</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/asset/js/ResetPassword.js"></script>
</body>
</html>