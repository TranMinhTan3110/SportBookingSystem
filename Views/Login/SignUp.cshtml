@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - Sports Booking System</title>

    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/asset/css/Login.css">
</head>

<body>
    <div class="auth-container">
        <div class="container">
            <div class="row justify-content-center align-items-center min-vh-100 py-5">
                <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">

                    <!-- Logo / Brand -->
                    <div class="text-center mb-4">
                        <div class="brand-logo">
                            <i class="bi bi-trophy-fill"></i>
                        </div>
                        <h2 class="brand-title">SPORTS BOOKING</h2>
                        <p class="brand-subtitle">Online Sports Booking & Payment System</p>
                    </div>

                    <!-- Signup Form Card -->
                    <div class="glass-card">
                        <div class="card-body p-4 p-sm-5">
                            <h3 class="form-title text-center mb-4">Đăng ký tài khoản</h3>

                            <form id="signup_form">
                                <div class="mb-3">
                                    <label for="fullName" class="form-label">Họ và tên</label>
                                    <div class="input-group">
                                        <span class="input-icon">
                                            <i class="bi bi-person"></i>
                                        </span>
                                        <input type="text" class="form-control glass-input" id="fullName"
                                               placeholder="Nhập họ và tên đầy đủ" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="email" class="form-label">Email</label>
                                    <div class="input-group">
                                        <span class="input-icon">
                                            <i class="bi bi-envelope"></i>
                                        </span>
                                        <input type="email" class="form-control glass-input" id="email"
                                               placeholder="Nhập địa chỉ email" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="phoneNumber" class="form-label">Số điện thoại</label>
                                    <div class="input-group">
                                        <span class="input-icon">
                                            <i class="bi bi-phone"></i>
                                        </span>
                                        <input type="tel" class="form-control glass-input" id="phoneNumber"
                                               placeholder="Nhập số điện thoại" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="password" class="form-label">Mật khẩu</label>
                                    <div class="input-group">
                                        <span class="input-icon">
                                            <i class="bi bi-lock"></i>
                                        </span>
                                        <input type="password" class="form-control glass-input" id="password"
                                               placeholder="Tạo mật khẩu" required>
                                    </div>
                                </div>

                                <button type="submit" class="btn btn-primary-custom w-100 mb-3">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Đăng ký
                                </button>

                                <div class="divider">
                                    <span>hoặc</span>
                                </div>

                                <div class="text-center">
                                    <p class="brand-subtitle">
                                        Đã có tài khoản?
                                        <a asp-controller="Login" asp-action="SignIn" class="link-success fw-bold">Đăng nhập ngay</a>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/asset/js/SignUp.js"></script>
</body>

</html>