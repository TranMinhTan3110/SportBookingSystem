        <!-- Field Card 3 -->
        <div class="field-card">
            <div class="field-image">
                <img src="~/asset/img/SanBayNguoi.jpg" alt="Sân 7 người - A2" onerror="this.src='https://via.placeholder.com/400x250/1E293B/F59E0B?text=⚽'">
                <span class="badge-status badge-maintenance">BẢO TRÌ</span>
            </div>
            <div class="field-content">
                <div class="field-header">
                    <h3 class="field-name">Sân 7 người - A2</h3>
                    <div class="field-actions">
                        <button class="btn-icon btn-edit" data-bs-toggle="modal" data-bs-target="#editFieldModal">
                            <i class="fas fa-edit"></i>
