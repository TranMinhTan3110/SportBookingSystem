                        <button class="btn-icon btn-delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="field-type">
                    <span class="sport-icon"></span>
                    <span>Bóng đá</span>
                </div>
                <div class="field-info">
                    <div class="info-row">
                        <div class="info-item">
                            <span class="info-label">Giá thuê</span>
                            <span class="info-value price">300,000đ/giờ</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Kích thước</span>
                            <span class="info-value">35m x 25m</span>
                        </div>
                    </div>
                    <div class="info-row">
                        <div class="info-item">
                            <span class="info-label">Đặt trong tháng</span>
                            <span class="info-value">0 lượt</span>
