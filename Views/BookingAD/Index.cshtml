@model List<SportBookingSystem.Models.Entities.Pitches>

@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/asset/css/bookingAD.css" />
}

@{
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="fields-management">
    <!-- Header Actions -->
    <div class="page-header">
        <div class="header-title">
            <h2>Quản Lý Sân</h2>
            <p class="subtitle">Quản lý thông tin và trạng thái các sân thể thao</p>
        </div>

        <div class="header-actions d-flex gap-2">
            <button class="btn btn-info text-white" onclick="openTimeSlotModal()">
                <i class="fas fa-clock"></i> Quản Lý Khung Giờ
            </button>
            <button class="btn-add-field" data-bs-toggle="modal" data-bs-target="#addFieldModal">
                <i class="fas fa-plus"></i> Thêm Sân Mới
            </button>
        </div>
    </div>

    <!-- Filters -->
    <form method="get" asp-action="Index">
        <div class="filters-section">
            <!-- Filter Category -->
            <div class="filter-group">
                <label>LOẠI SÂN</label>
                <select name="categoryId" class="form-select filter-select" onchange="this.form.submit()">
                    <option value="">Tất cả</option>
                    @if (ViewBag.Categories != null)
                    {
                        foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryId"
                                    selected="@(ViewBag.SelectedCategoryId == category.CategoryId)">
                                @category.CategoryName
                            </option>
                        }
                    }
                </select>
            </div>

            <!-- Filter Status -->
            <div class="filter-group">
                <label>TRẠNG THÁI</label>
                <select name="status" class="form-select filter-select" onchange="this.form.submit()">
                    <option value="">Tất cả</option>
                    <option value="Sẵn sàng" selected="@(ViewBag.SelectedStatus == "Sẵn sàng")">Sẵn sàng</option>
                    <option value="Bảo trì" selected="@(ViewBag.SelectedStatus == "Bảo trì")">Bảo trì</option>
                    <option value="Đã đặt" selected="@(ViewBag.SelectedStatus == "Đã đặt")">Đã đặt</option>
                </select>
            </div>

            <!-- Search Box -->
            <div class="filter-group search-group">
                <label>TÌM KIẾM</label>
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                           class="form-control search-input"
                           placeholder="Tìm theo tên sân..."
                           style="padding-left:48px">
                </div>
            </div>
        </div>
    </form>

    <!-- Fields Grid - HIỂN THỊ ĐỘNG TỪ DATABASE -->
    <div class="fields-grid">
        @if (Model != null && Model.Any())
        {
            foreach (var pitch in Model)
            {
                <!-- Xác định CSS class cho badge status -->
                var badgeClass = pitch.Status switch
                {
                    "Sẵn sàng" => "badge-active",
                    "Bảo trì" => "badge-maintenance",
                    "Đã đặt" => "badge-inactive",
                    _ => "badge-active"
                };

                var statusText = pitch.Status switch
                {
                    "Sẵn sàng" => "HOẠT ĐỘNG",
                    "Bảo trì" => "BẢO TRÌ",
                    "Đã đặt" => "ĐÃ ĐẶT",
                    _ => "HOẠT ĐỘNG"
                };

                <div class="field-card">
                    <div class="field-image">
                        <img src="@(string.IsNullOrEmpty(pitch.ImageUrl) ? "/asset/img/default-pitch.jpg" : pitch.ImageUrl)"
                             alt="@pitch.PitchName"
                             onerror="this.src='https://via.placeholder.com/400x250/1E293B/10B981?text='">
                        <span class="badge-status @badgeClass">@statusText</span>
                    </div>
                    <div class="field-content">
                        <div class="field-header">
                            <h3 class="field-name">@pitch.PitchName</h3>
                            <div class="field-actions">
                                <button class="btn-icon btn-edit"
                                        data-pitch-id="@pitch.PitchId"
                                        data-bs-toggle="modal"
                                        data-bs-target="#editFieldModal">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button class="btn-icon btn-delete" data-pitch-id="@pitch.PitchId">
                                    <i class="fas fa-trash"></i>
                                </button>
                                <button class="btn-icon btn-price"
                                        data-pitch-id="@pitch.PitchId"
                                        data-pitch-name="@pitch.PitchName"
                                        data-bs-toggle="modal"
                                        data-bs-target="#priceConfigModal"
                                        title="Cấu hình bảng giá">
                                    <i class="fas fa-dollar-sign"></i>
                                </button>
                            </div>
                        </div>
                        <div class="field-type">
                            <span class="sport-icon"></span>
                            <span>@pitch.Category?.CategoryName</span>
                        </div>
                        <div class="field-info">
                            <div class="info-row">
                                <div class="info-item">
                                    <span class="info-label">Giá thuê</span>
                                    <span class="info-value price">@pitch.PricePerHour.ToString("N0")đ/giờ</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Sức chứa</span>
                                    <span class="info-value">@pitch.Capacity người</span>
                                </div>
                            </div>
                            <div class="info-row">
                                <div class="info-item">
                                    <span class="info-label">Trạng thái</span>
                                    <span class="info-value">@pitch.Status</span>
                                </div>
                                <div class="info-item">
                                    <span class="info-label">Loại</span>
                                    <span class="info-value revenue">@pitch.Category?.CategoryName</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <h4 class="text-muted">Chưa có sân nào</h4>
                <p class="text-muted">Nhấn "Thêm Sân Mới" để bắt đầu</p>
            </div>
        }
    </div>
</div>

<!-- Add Field Modal -->
<div class="modal fade" id="addFieldModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Thêm Sân Mới</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addFieldForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label>Tên Sân <span class="required">*</span></label>
                        <input type="text" name="PitchName" class="form-control" placeholder="Ví dụ: Sân 5 người - A1" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Loại Sân <span class="required">*</span></label>
                                <select name="CategoryId" class="form-select" required>
                                    <option value="">Chọn loại sân</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.CategoryId">@category.CategoryName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Trạng Thái <span class="required">*</span></label>
                                <select name="Status" class="form-select" required>
                                    <option value="Sẵn sàng" selected>Sẵn sàng</option>
                                    <option value="Đã đặt">Đã đặt</option>
                                    <option value="Bảo trì">Bảo trì</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Giá Thuê / Giờ (VND) <span class="required">*</span></label>
                                <input type="number" name="PricePerHour" class="form-control" placeholder="200000" min="0" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sức chứa (người) <span class="required">*</span></label>
                                <input type="number" name="Capacity" class="form-control" placeholder="10" min="1" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea name="Description" class="form-control" rows="3" placeholder="Mô tả chi tiết về sân..."></textarea>
                    </div>

                    <div class="form-group">
                        <label>Ảnh Sân</label>
                        <div class="image-upload-area">
                            <input type="file" id="fieldImageInput" name="ImageFile" accept="image/*" class="d-none">
                            <div class="upload-placeholder" onclick="document.getElementById('fieldImageInput').click()">
                                <i class="fas fa-cloud-upload-alt"></i>
                                <p>Nhấn để tải ảnh lên</p>
                                <small>Chấp nhận: JPG, PNG, GIF (Tối đa 5MB)</small>
                            </div>
                            <div id="imagePreviewContainer" class="image-preview-container"></div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="submit" form="addFieldForm" id="btnAddField" class="btn btn-primary">
                    <i class="fas fa-save"></i> Lưu Thông Tin
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Field Modal -->
<div class="modal fade" id="editFieldModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Cập Nhật Thông Tin Sân</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editFieldForm" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="PitchId" id="editPitchId">

                    <div class="form-group">
                        <label>Tên Sân <span class="required">*</span></label>
                        <input type="text" name="PitchName" id="editPitchName" class="form-control" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Loại Sân <span class="required">*</span></label>
                                <select name="CategoryId" id="editCategoryId" class="form-select" required>
                                    <option value="">Chọn loại sân</option>
                                    @if (ViewBag.Categories != null)
                                    {
                                        foreach (var category in ViewBag.Categories)
                                        {
                                            <option value="@category.CategoryId">@category.CategoryName</option>
                                        }
                                    }
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Trạng Thái <span class="required">*</span></label>
                                <select name="Status" id="editStatus" class="form-select" required>
                                    <option value="Sẵn sàng">Sẵn sàng</option>
                                    <option value="Đã đặt">Đã đặt</option>
                                    <option value="Bảo trì">Bảo trì</option>
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Giá Thuê / Giờ (VND) <span class="required">*</span></label>
                                <input type="number" name="PricePerHour" id="editPricePerHour" class="form-control" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label>Sức chứa (người) <span class="required">*</span></label>
                                <input type="number" name="Capacity" id="editCapacity" class="form-control" required>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Mô tả</label>
                        <textarea name="Description" id="editDescription" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="form-group">
                        <label>Ảnh Sân</label>
                        <div class="image-upload-area">
                            <input type="file" id="editFieldImageInput" name="ImageFile" accept="image/*" class="d-none">
                            <div id="currentImageContainer" class="current-images"></div>
                            <div class="upload-placeholder small" onclick="document.getElementById('editFieldImageInput').click()">
                                <i class="fas fa-plus"></i>
                                <p>Thay đổi ảnh</p>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <button type="submit" form="editFieldForm" id="btnEditField" class="btn btn-primary">
                    <i class="fas fa-save"></i> Cập Nhật
                </button>
            </div>
        </div>
    </div>
</div>
@* modal cấu hình giá cho sân  *@
<div class="modal fade" id="priceConfigModal" tabindex="-1">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title">Cấu hình giá: <span id="priceConfigPitchName" class="text-primary"></span></h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="add-price-section mb-4 p-3 bg-light rounded border">
                    <h5 class="mb-3"><i class="fas fa-plus-circle"></i> Thêm khung giờ mới</h5>
                    <form id="addPriceForm" class="row g-3">
                        <input type="hidden" name="PitchId" id="pricePitchId">
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Từ giờ</label>
                            <input type="text" name="StartTime" class="form-control time-picker" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Đến giờ</label>
                            <input type="text" name="EndTime" class="form-control time-picker" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Giá (VNĐ)</label>
                            <input type="number" name="Price" class="form-control" placeholder="300000" required>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label small fw-bold">Ghi chú</label>
                            <input type="text" name="Note" class="form-control" placeholder="Giờ vàng...">
                        </div>
                        <div class="col-12 text-end mt-3">
                            <button type="submit" class="btn btn-sm btn-primary">
                                <i class="fas fa-save"></i> Thêm ngay
                            </button>
                        </div>
                    </form>
                </div>

                <h5 class="mb-3"><i class="fas fa-list"></i> Danh sách khung giờ áp dụng</h5>
                <div class="table-responsive">
                    <table class="table table-hover border">
                        <thead class="table-light">
                            <tr>
                                <th>Thời gian</th>
                                <th>Giá tiền</th>
                                <th>Ghi chú</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody id="priceTableBody">
                        </tbody>
                    </table>
                </div>
                <div class="alert alert-info small mt-2">
                    <i class="fas fa-info-circle"></i> Các khung giờ không được cấu hình ở đây sẽ lấy <strong>Giá mặc định</strong> của sân.
                </div>
            </div>
        </div>
    </div>
</div>
@* modal quan lý khung giờ *@
<div class="modal fade" id="manageTimeSlotModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title fw-bold">⚙️ Cấu Hình Khung Giờ Hệ Thống</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="p-3 mb-3 bg-light border rounded">
                    <h6 class="fw-bold text-primary mb-2">Thêm Khung Giờ Mới</h6>
                    <form id="formAddTimeSlot" class="row g-2 align-items-end">
                        <div class="col-5">
                            <label class="small fw-bold">Bắt đầu</label>
                            <input type="text" id="slotStart" class="form-control time-picker" required>
                        </div>
                        <div class="col-5">
                            <label class="small fw-bold">Kết thúc</label>
                            <input type="text" id="slotEnd" class="form-control time-picker" required>
                        </div>
                        <div class="col-2">
                            <button type="submit" class="btn btn-primary w-100"><i class="fas fa-plus"></i></button>
                        </div>
                    </form>
                </div>

                <h6 class="fw-bold mt-3">Danh Sách Khung Giờ Hiện Có</h6>
                <div class="table-responsive" style="max-height: 300px; overflow-y: auto;">
                    <table class="table table-sm table-hover align-middle">
                        <thead class="table-light sticky-top">
                            <tr>
                                <th>Tên Ca</th>
                                <th>Thời gian</th>
                                <th class="text-center">Xóa</th>
                            </tr>
                        </thead>
                        <tbody id="timeSlotTableBody">
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/asset/js/bookingAD.js"></script>
}