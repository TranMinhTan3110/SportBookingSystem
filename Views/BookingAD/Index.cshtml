@section Styles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="~/asset/css/bookingAD.css" />
}
@{
    
    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<div class="fields-management">
    <!-- Header Actions -->
    <div class="page-header">
        <div class="header-title">
            <h2>Quản Lý Sân</h2>
            <p class="subtitle">Quản lý thông tin và trạng thái các sân thể thao</p>
        </div>
        <button class="btn-add-field" data-bs-toggle="modal" data-bs-target="#addFieldModal">
            <i class="fas fa-plus"></i> Thêm Sân Mới
        </button>
    </div>

    <!-- Filters -->
    <div class="filters-section">
        <div class="filter-group">
            <label>LOẠI SÂN</label>
            <select class="form-select filter-select">
                <option value="">Tất cả</option>
                <option value="football">Bóng đá</option>
                <option value="tennis">Tennis</option>
                <option value="volleyball">Bóng chuyền</option>
                <option value="badminton">Cầu lông</option>
            </select>
        </div>

        <div class="filter-group">
            <label>TRẠNG THÁI</label>
            <select class="form-select filter-select">
                <option value="">Tất cả</option>
                <option value="active">Hoạt động</option>
                <option value="maintenance">Bảo trì</option>
                <option value="inactive">Ngưng hoạt động</option>
            </select>
        </div>

        <div class="filter-group search-group">
            <label>TÌM KIẾM</label>
            <div class="search-box">
                <i class="fas fa-search"></i>
                <input type="text" class="form-control search-input" placeholder="Tìm theo tên sân..." style="padding-left:48px">
            </div>
        </div>
    </div>

    <!-- Fields Grid -->
    <div class="fields-grid">
        <!-- Field Card 1 -->
        <div class="field-card">
            <div class="field-image">
                <img src="~/asset/img/SanNamNguoi.webp" alt="Sân 5 người - A1" onerror="this.src='https://via.placeholder.com/400x250/1E293B/10B981?text=⚽'">
                <span class="badge-status badge-active">HOẠT ĐỘNG</span>
            </div>
            <div class="field-content">
                <div class="field-header">
                    <h3 class="field-name">Sân 5 người - A1</h3>
                    <div class="field-actions">
                        <button class="btn-icon btn-edit" data-bs-toggle="modal" data-bs-target="#editFieldModal">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn-icon btn-delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </div>
                </div>
                <div class="field-type">
                    <span class="sport-icon"></span>
                    <span>Bóng đá</span>
                </div>
                <div class="field-info">
                    <div class="info-row">
                        <div class="info-item">
                            <span class="info-label">Giá thuê</span>
                            <span class="info-value price">200,000đ/giờ</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Kích thước</span>
                            <span class="info-value">25m x 15m</span>
                        </div>
                    </div>
                    <div class="info-row">
                        <div class="info-item">
                            <span class="info-label">Đặt trong tháng</span>
                            <span class="info-value">248 lượt</span>
                        </div>
                        <div class="info-item">
                            <span class="info-label">Doanh thu</span>
                            <span class="info-value revenue">24.8tr</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Field Card 2 -->
        <div class="field-card">
            <div class="field-image">
