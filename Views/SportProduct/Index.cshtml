                        <td><img src="https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?w=200&h=200&fit=crop" alt="Product" class="product-img"></td>
                        <td>
                            <div class="product-name">Áo Adidas Classic</div>
                            <div class="product-brand">Adidas</div>
                        </td>
                        <td><span class="badge badge-shirt">Áo</span></td>
                        <td>L</td>
                        <td>450,000₫</td>
                        <td><span class="stock-status stock-low">8 cái</span></td>
                        <td>
                            <div class="action-buttons">
                                <button class="btn-action btn-view" title="Xem chi tiết"><i class="fa-solid fa-plus"></i></button>
                                <button class="btn-action btn-edit" onclick="openModal('edit', 4)" title="Sửa"><i class="fa-solid fa-pen-to-square"></i></button>
                                <button class="btn-action btn-delete" onclick="deleteProduct(4)" title="Xóa"><i class="fa-solid fa-trash"></i></button>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>#003</td>
                        <td><img src="https://images.unsplash.com/photo-1575361204480-aadea25e6e68?w=200&h=200&fit=crop" alt="Product" class="product-img"></td>
                        <td>
                            <div class="product-name">Bóng đá Puma</div>
                            <div class="product-brand">Puma</div>
                        </td>
