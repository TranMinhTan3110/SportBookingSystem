<!-- Views/Shared/_AdminQRModals.cshtml -->
<div class="modal fade" id="qrFulfillmentModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-dark text-white border-secondary shadow-lg">
            <div class="modal-header border-secondary">
                <h5 class="modal-title d-flex align-items-center">
                    <i class="bi bi-qr-code-scan me-2 text-primary"></i>
                    Xác nhận đơn hàng QR
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <div id="fulfillmentLoading" class="text-center py-3">
                    <div class="spinner-border text-primary" role="status"></div>
                    <p class="mt-2 text-muted">Đang tải thông tin đơn hàng...</p>
                </div>
                <div id="fulfillmentContent" class="d-none">
                    <div class="d-flex justify-content-between mb-3 pb-3 border-bottom border-secondary">
                        <span class="text-muted">Mã đơn hàng:</span>
                        <span id="fOrderCode" class="fw-bold text-primary">-</span>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block mb-1">Khách hàng</label>
                        <div id="fCustomerName" class="fs-5 fw-bold">-</div>
                    </div>
                    <div class="mb-3">
                        <label class="text-muted small d-block mb-1">Sản phẩm & Số lượng</label>
                        <div class="d-flex justify-content-between align-items-center">
                            <span id="fProductName" class="fw-semibold">-</span>
                            <span class="badge bg-secondary" id="fQuantity">x 0</span>
                        </div>
                    </div>
                    <div class="p-3 bg-secondary bg-opacity-10 rounded-3 mb-4">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-muted">Tổng thanh toán:</span>
                            <span id="fTotalAmount" class="fs-4 fw-bold text-success">-</span>
                        </div>
                    </div>
                    
                    <input type="hidden" id="fOrderId" value="">
                </div>
            </div>
            <div class="modal-footer border-secondary justify-content-between">
                <button type="button" id="btnFulfillCancel" class="btn btn-outline-danger px-4">
                    <i class="bi bi-x-circle me-2"></i>Hủy đơn
                </button>
                <button type="button" id="btnFulfillSuccess" class="btn btn-success px-4">
                    <i class="bi bi-check-circle me-2"></i>Xác nhận nhận đồ
                </button>
            </div>
        </div>
    </div>
</div>
